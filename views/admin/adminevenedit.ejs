</div>

<form method="POST" enctype="multipart/form-data" action="/admin/evenedit/<%= nom %>">
    <div class="form-group">
      <label for="">Nom</label>
      <input type="text" class="form-control" name="nom" value="<%= nom %>" placeholder="Enter name">
    </div>
    <div class="form-group">
        <label for="">Description</label>
        <textarea type="text" class="form-control" name="description" id="ta" cols="30" rows="10" value="<%= description %>" placeholder="Enter description"><%= description %></textarea>
      </div>
      <div class="form-group">
        <label for="">Current image</label>
        <p>
          <% if(image == ""){ %>
            <img id="noimage" src="../../public/images/noimage.png" height="100" width="100">
            <% } else { %>
              <img id="noimage" src="../../public/upload/<%= id %>/<%= image %>" height="100" width="100">
          <% } %>
        </p>
      </div>
      <div class="form-group">
        <label for="">Upload image</label>
        <input type="file" class="form-control" name="image" id="img">
        <img src="#" id="imgPreview">
      </div>
      
      <input type="hidden" name="pimage" value="<%= image %>">
    <input type="hidden" name="id" value="<%= id %>">
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

