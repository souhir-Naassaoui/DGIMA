<div class="container">

    <form action="/recrutement" method="post" autocomplete="off">
        <input type="hidden" name="_id" value="<%=stage._id%>">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Entreprise</label>
                <input type="text" name="entreprise" class="form-control" value="<%=stage.entreprise%>" placeholder="xxxxx">
                <div class="text-danger">
                    <%=stage.entrepriseError%>
                </div>
            </div>
            <div class="form-group col-md-6">
                <label for="inputPassword4">Responsable</label>
                <input type="text" class="form-control" name="responsable" value="<%=stage.responsable%>"  placeholder="xxxxx">
                <div class="text-danger">
                    <%=stage.responsableError%>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Email</label>
                <input type="email" name="email" class="form-control" value="<%=stage.email%>" placeholder="xxxxx">
                <div class="text-danger">
                    <%=stage.emailError%>
                </div>
            </div>
            <div class="form-group col-md-6">
                <label for="inputPassword4">Téléphone</label>
                <input type="number" class="form-control" name="telephones" value="<%=stage.telephones%>" placeholder="xxxxx">
                <div class="text-danger">
                    <%=stage.telephonesError%>
                </div>
            </div>
        </div>



        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputCity">titre de l'offre</label>
                <input type="text" class="form-control" value="<%=stage.titreOffre%>" name="titreOffre">
                <div class="text-danger">
                    <%=stage.titreOffreError%>
                </div>
            </div>
            <div class="form-group col-md-4">
                <label for="inputState">Type de stage</label> <input type="text" disabled value="<%=stage.type%>">
                <select id="inputState" class="form-control" name="type">
                    <option name="type" value="PFE" selected>Stage PFE</option>
                    <option name="type" value="Stage Ordinaire">Stage ordinaire</option>
                </select>
            </div>
            <div class="form-group col-md-2">
                <label>Nombre de postes</label>
                <input type="number" class="form-control" value="<%=stage.nombrePostes%>" name="nombrePostes" >
                <div class="text-danger">
                    <%=stage.nombrePostesError%>
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-8">
                <label for="inputAddress">Adresse</label>
                <input type="text" class="form-control" name="adresse" value="<%=stage.adresse%>" placeholder="xxxxx">
                <div class="text-danger">
                    <%=stage.adresseError%>
                </div>
            </div>
            <div class="form-group col-md-2">
                <label>Site web :</label>
                <input type="text" class="form-control" value="<%=stage.siteWeb%>" name="siteWeb" >
            </div>
            <div class="form-group col-md-2">
                <label>Publié le :</label>
                <input type="text" class="form-control"  value="<%=new Date().getDate()+"/"+(new Date().getMonth()+1)+"/"+new Date().getFullYear()%>" disabled style=" margin: .4rem 0;">

            </div>
        </div>
        <div class="form-group">
            <label>Description</label>
            <input type="text" class="form-control" name="Description" value="<%=stage.Description%>"  placeholder="xxxx">
            <div class="text-danger">
                <%=stage.descriptionError%>
            </div>
        </div>
        <div class="form-group">
            <label for="inputAddress">Missions</label>
            <textarea class="form-control" name="Missions" value="<%=stage.Missions%>" rows="10" cols="50"></textarea>
        </div>
        <div class="form-group">
            <label for="inputAddress">Compétences requises</label>
            <textarea class="form-control" name="Competences" value="<%=stage.Competences%>" rows="10" cols="50"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Editer</button>
        <a href="/recrutement/list" class="btn btn-secondary"><i class="fa fa-list-alt"></i> Voir tout</a>
    </form>
